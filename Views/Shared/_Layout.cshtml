@using Microsoft.AspNetCore.Identity
@using System.Security.Principal
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<script src="https://use.fontawesome.com/c560c025cf.js"></script>
<!DOCTYPE html>
<html lang="sk">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Ticket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Assets/logo.png"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <partial name="_LoginPartial" />
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link"><i class="fa fa-fw fa-home"></i>Domov</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"><i class="fa fa-users" aria-hidden="true"></i>O nás</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"><i class="p-0 fa fa-fw fa-envelope"></i>Kontakt</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="User" asp-action="Cart"> <i class="fa fa-shopping-cart" aria-hidden="true"></i> Nákupný košík</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="container py-5">

        <div class="row">
            <div class="col-12 col-md">
