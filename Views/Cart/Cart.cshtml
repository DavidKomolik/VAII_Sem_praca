@model Semestralna_praca_VAII.Models.Cart

@{
    ViewData["Title"] = "Cart";
}

<script src="https://use.fontawesome.com/c560c025cf.js"></script>
<div class="container">
    <div class="card shopping-cart">
        <div class="card-header bg-dark text-light">
            <i class="fa fa-shopping-cart" aria-hidden="true"></i>
            Nákupný košík
            <a routerLink="/events" class="btn btn-outline-info btn-sm pull-right ">Pokračovať v nákupe </a>
            <div class="clearfix"></div>
        </div>
        <div class="card-body">
            <!-- PRODUCT -->
            @foreach (var item in Model.eventList)
            {
                <div class="row">
                    <div class="col-12 col-sm-12 col-md-2 text-center">
                        <img class="img-responsive" src="~/Assets/@item.addedItem.imgPath" alt="prewiew" width="120" height="80">
                    </div>
                    <div class="col-12 text-sm-center col-sm-12 text-md-left col-md-6">
                        <h4 class="product-name"><strong>@item.addedItem.name</strong></h4>
                        <h4>
                            <small>@item.addedItem.description</small>
                        </h4>
                    </div>
                    <div class="col-12 col-sm-12 text-sm-center col-md-4 text-md-right row">
                        <div class="col-3 col-sm-3 col-md-6 text-md-right" style="padding-top: 5px">
                            <h6><strong>@item.addedItem.price € <span class="text-muted">x</span></strong></h6>
                        </div>
                        <div class="col-4 col-sm-4 col-md-4">
                            <div class="quantity"> 
                                <input type="button" value="+" class="plus">
                                <input type="number" step="1" max="99" min="1" value="1" title="Qty" class="qty"
                                       size="4">
                                <input type="button" value="-" class="minus">
                            </div>
                        </div>
                        <div class="col-2 col-sm-2 col-md-2 text-right">
                            <button type="button" class="btn btn-outline-danger btn-xs" (click)="remove(item)">
                                <i class="fa fa-trash" aria-hidden="true"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }

            <hr>
            <!-- END PRODUCT -->

        </div>
        <div class="card-footer">
            <div class="coupon col-md-5 col-sm-5 no-padding-left pull-left">
                <div class="row">
                    <div class="col-6">
                        <input type="text" class="form-control" placeholder="Kupon">
                    </div>
                    <div class="col-6">
                        <input type="submit" class="btn btn-default default-color5" value="Pouzit kupon">
                    </div>
                </div>
            </div>
            <div class="pull-right" style="margin: 10px">
                <a routerLink="/checkout" class="btn btn-success pull-right">K platbe</a>
                <div class="pull-right" style="margin: 5px">
                    Cena spolu: <b> todo €</b>
                </div>
            </div>
        </div>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
